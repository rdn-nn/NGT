    <script>
        $(".status").click(function () {
            var id = $(this).attr("rel");
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/admin/usuarios/trocarstatus",
                data: { id },
                success: function (retorno) {

                    if (retorno == "t") {
                        $("#status_" + id).removeClass("font-weight-bold text-danger");
                        $("#status_" + id).addClass("font-weight-bold text-success");
                        $("#status_" + id).text("Ativado");
                    }
                    else if (retorno == "f") {
                        $("#status_" + id).removeClass("font-weight-bold text-success");
                        $("#status_" + id).addClass("font-weight-bold text-danger");
                        $("#status_" + id).text("Desativado");

                    } else if (retorno == "n") {
                        window.location.replace("/admin/usuarios");
                    }
                }
            });
        });

    </script>
    <script>
        $(".removeUsuario").click(function () {
            var id = $(this).attr("ref");

            Swal.fire({
                title: 'Deseja confirmar a exclusão deste usuário?',
                text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        dataType: "json",
                        type: "POST",
                        url: "/admin/usuarios/deletausuario",
                        data: { id },
                        success: function (retorno) {

                            if (retorno == "t") {

                                window.location.replace("/admin/usuarios");

                            }
                            else if (retorno == "f") {

                                window.location.replace("/admin/usuarios");
                            }
                        }
                    });

                    //Swal.fire(
                    //    'Excluído!',
                    //    'Todos os dados deste usuário foram excluídos!',
                    //    'success'
                    //)
                    //window.location.replace("/admin/usuarios");
                }
            })


            /* alert(id);*/

        });
    </script>
}
