@model NGT.Models.Entities.Usuario
@{
    ViewBag.Title = "Usuários";
    ViewBag.MenuLinkUsuarios = true;
}

<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>
<section class="pl-3 pr-3">
    <div class="row">
        <div class="col-sm-6 mb-3">

            <form action="@Url.RouteUrl("Admin.Usuario.Filtrar")" method="get" role="search" class="d-inline">
                <div class="input-group input-group-sm">
                    <input class="form-control" type="text" name="termo" placeholder="Buscar usuários">
                    <div class="input-group-append">
                        <button class="btn input-group-text" type="submit">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-sm-6 mb-3">
            <a class="btn btn-primary btn-sm float-lg-right float-md-right float-sm-right float-left" id="novoUser">
                Criar Novo Usuário
            </a>
        </div>
    </div>
</section>

<div class="pl-3 pr-3 pb-3">
    <div class="row d-flex justify-content-center">


        @foreach (var item in ViewBag.usuarios)

        {

            bool status;
            if (item.Status.Nome == "Ativado")
            {
                status = true;
            }
            else
            {
                status = false;
            }

            <div class="col-md-4 col-sm-6 col-lg-4 col-xl-3 col-12 mb-3">
                <div class="card card-primary card-outline card-profile">

                    <div class="removeBloc">
                        <button ref="@item.Id" class="btn btn-tool removeUsuario">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle" src="@item.FotoPerfil" alt="User profile picture" />
                        </div>

                        <h3 class="profile-username text-center mt-4">@item.Nome</h3>
                        <p class="text-muted text-center">@item.Email</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Perfil: </b> <a class="float-right">@item.Perfil.Nome</a>
                            </li>
                            <li class="list-group-item">
                                <b>
                                    @Html.CheckBox("chk", status, new { @class = "status", @rel = @item.Id })
                                    Status:
                                </b>
                                <a class="float-right" id="status_@item.Id">
                                    @item.Status.Nome
                                </a>
                            </li>
                        </ul>

                        <div class="text-right opt">

                            <a class="btn btn-primary btn-sm" id="DetailsUser">
                                <i class="fas fa-folder"></i>
                                Ver Mais
                            </a>
                            @*<a class="btn btn-info btn-sm" href="#">
                                     <i class="fas fa-pencil-alt">
                                     </i>
                                     Editar
                                 </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                         <i class="fas fa-trash">
                                         </i>
                                         Excluir
                                     </a>*@
                        </div>
                    </div>


                </div>
            </div>
        }
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovoUser" aria-hidden="true"></div>
<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="DetailsUser" aria-hidden="true"></div>

