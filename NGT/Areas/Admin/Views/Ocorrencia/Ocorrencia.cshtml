@model NGT.Models.Entities.Ocorrencia
@{
    ViewBag.Title = "Chamados";
    ViewBag.MenuLinkOcorrencias = true;
}


<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>
<div class="pl-3 pr-3 pb-3">


    @using (Html.BeginForm("Criar", "Ocorrencia", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card card-default collapsed-card">
            <div class="card-header">
                <h3 class="card-title">Novo Chamado</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>

            </div>
            <div class="card-body overflow-hidden">


                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.BlocoId, "Bloco: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.DropDownList("BlocoId", null, "Selecione o bloco", htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>


                <div class="form-group d-none" id="divLocais">
                    @Html.LabelFor(model => model.LocalId, "Local: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.DropDownList("LocalId", Enumerable.Empty<SelectListItem>(), htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>

                <div class="form-group d-none" id="divCategs">
                    @Html.LabelFor(model => model.CategoriaId, "Categoria", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12  pl-3 pr-3">
                        @Html.DropDownList("CategoriaId", null, "Selecione a Categoria", htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>

                <div class="form-group d-none" id="divItens">
                    @Html.LabelFor(model => model.ItemId, "Item", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.DropDownList("ItemId", Enumerable.Empty<SelectListItem>(), htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>

                <div class="form-group d-none" id="divMotivos">
                    @Html.LabelFor(model => model.MotivoId, "Motivo", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.DropDownList("MotivoId", null, "Selecione o Motivo", htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>

                <div class="form-group d-none" id="divImg">
                    @Html.LabelFor(model => model.FotoOcorrencia, "Deseja carregar uma imagem da ocorrência?: ", htmlAttributes: new { @class = "control-label  pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        <div class="input-group">
                            <input type="file" class="form-control-file" name="FotoOcorrencia">
                        </div>
                    </div>
                </div>

                <div class="form-group d-none" id="divObs">
                    @Html.LabelFor(model => model.Obs, htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.TextAreaFor(model => model.Obs, new { @class = "form-control col-11 col-md-12", rows = "5" })
                    </div>
                </div>

            </div>
            <div class="card-footer d-none justify-content-end col-11 col-md-12" id="divSubmit">
                <button type="submit" class="btn btn-default ">Gravar</button>
            </div>
        </div>

    }

    <div class="row">
        <div id="idPendente" class="col-lg-3 col-6">
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Pendente</h3>
                    <p>Pendentes</p>
                </div>

                <div class="icon text-info">
                    <i class="fas fa-solid fa-circle-pause"></i>
                </div>
            </div>
        </div>

        <div id="idAndamento" class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Andamento</h3>
                    <p>Andamento</p>
                </div>
                <div class="icon text-warning">
                    <i class="fas fa-solid fa-arrow-rotate-right"></i>
                </div>
            </div>
        </div>

        <div id="idConcluido" class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Concluido</h3>
                    <p>Concluídos</p>
                </div>
                <div class="icon text-success">
                    <i class="fas fa-solid fa-circle-check"></i>
                </div>
            </div>
        </div>

        <div id="idCancelado" class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Cancelado</h3>
                    <p>Cancelados</p>
                </div>
                <div class="icon text-danger">
                    <i class="fas fa-times-circle"></i>
                </div>
            </div>
        </div>
    </div>
    <div>
        @if (ViewBag.Ocorrencias.Count >= 1)
        {

            <div>
                <table id="ocorrenciasTable" class="table table-bordered table-striped table-hover table-sm">
                    <thead class="theadbg">
                        <tr>
                            <th>Ticket</th>
                            <th>@Html.DisplayNameFor(model => model.Bloco)</th>
                            <th>@Html.DisplayNameFor(model => model.Local)</th>
                            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                            <th>@Html.DisplayNameFor(model => model.Item)</th>
                            <th>@Html.DisplayNameFor(model => model.Motivo)</th>
                            <th>@Html.DisplayNameFor(model => model.Obs)</th>
                            <th>Foto</th>
                            <th>Criado</th>
                            <th>Atualização</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="tbodybg">
                        @foreach (var item in @ViewBag.Ocorrencias)
                        {
                            <tr>
                                <th>@item.NumTicket</th>
                                <td>@item.Bloco.Nome</td>
                                <td>@item.Local.Nome</td>
                                <td>@item.Categoria.Nome</td>
                                <td>@item.Item.Nome</td>
                                <td>@item.Motivo.Nome</td>
                                <td>@item.Obs</td>
                                <td>
                                    @if (item.FotoOcorrencia != null)
                                    {
                                        <a href="@item.FotoOcorrencia" data-toggle="lightbox" data-title="OCORRÊNCIA - @item.NumTicket" data-category="2, 4">
                                            Clique Aqui
                                        </a>
                                    }
                                </td>
                                <td>@item.DataCriacao.ToShortDateString()</td>
                                <td>
                                    @if (item.DataAtualizacao != null)
                                    {
                                        @item.DataAtualizacao.ToShortDateString();
                                    }
                                    else
                                    {
                                        @item.DataAtualizacao;
                                    }
                                </td>
                                <td>
                                    @item.StatusTicket.Nome
                                    <div class="float-right editaOco" rel="@item.Id"><i class="fas fa-pencil-alt"></i></div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
    </div>
</div>
<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditaOcorrencia" aria-hidden="true"></div>

