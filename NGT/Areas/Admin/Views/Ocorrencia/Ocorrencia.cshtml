    <script src="~/Areas/Admin/Content/Libs/ekko-lightbox/ekko-lightbox.js"></script>

    <script>
        $(function () {
            $("#ocorrenciasTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#ocorrenciasTable_wrapper .col-md-6:eq(0)');
        });
    </script>

    <script>
        $(function () {
            $('.editaOco').click(function () {
                var id = $(this).attr("rel");
                $("#modal").load("/admin/ocorrencias/alterastatus/" + id, function () {
                    $("#modal").modal();
                });
            });
        });
    </script>

    <script>
        $(function () {
            $('#novoChamado').click(function () {
                /*var id = $(this).attr("rel");*/
                $("#modalN").load("/admin/ocorrencias/nova-ocorrencia/", function () {
                    $("#modalN").modal();
                });
            });
        });
    </script>
