    <script>
        $('#idAndamento').click(function () {
            $("#tabSearch").val("Andamento").trigger('keyup');
        });

        $('#idPendente').click(function () {
            $("#tabSearch").val("Pendente").trigger('keyup');
        });

        $('#idConcluido').click(function () {
            $("#tabSearch").val("Concluído").trigger('keyup');
        });

        $('#idCancelado').click(function () {
            $("#tabSearch").val("Cancelado").trigger('keyup');
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#BlocoId').change(function () {
                $.ajax({
                    url: 'ocorrencias/carregaLocal',
                    type: 'POST',
                    data: { blocoId: $(this).val() },
                    datatype: 'json',
                    success: function (data) {
                        var options = '';
                        options += '<option value>Selecione o Local</option>';
                        $.each(data, function () {
                            options += '<option value="' + this.id + '">' + this.nome + '</option>';
                        });
                        $('#LocalId').html(options);
                        $('#divLocais').removeClass('d-none');
                        $('#divCategs').removeClass('d-none');
                    },
                });
            });
        });

        $(document).ready(function () {

            $('#CategoriaId').change(function () {
                if ($('#CategoriaId').val() || $('#LocalId').val() !== "") {
                    $.ajax({
                        url: 'ocorrencias/carregaitem',
                        type: 'POST',
                        data: {
                            localId: $('#LocalId').val(),
                            categId: $('#CategoriaId').val()
                        },
                        datatype: 'json',
                        success: function (data) {
                            var options = '';
                            options += '<option>Selecione o Item</option>';
                            $.each(data, function () {
                                options += '<option value="' + this.id + '">' + this.nome + '</option>';
                            });
                            $('#ItemId').html(options);
                            $('#divItens').removeClass('d-none');
                            $('#divMotivos').removeClass('d-none');
                            $('#divImg').removeClass('d-none');
                            $('#divObs').removeClass('d-none');
                        }
                    });
                }
            });

            $('#LocalId').change(function () {
                if ($('#CategoriaId').val() || $('#LocalId').val() !== "") {
                    $.ajax({
                        url: 'ocorrencias/carregaitem',
                        type: 'POST',
                        data: {
                            localId: $('#LocalId').val(),
                            categId: $('#CategoriaId').val()
                        },
                        datatype: 'json',
                        success: function (data) {
                            var options = '';
                            options += '<option>Selecione o Item</option>';
                            $.each(data, function () {
                                options += '<option value="' + this.id + '">' + this.nome + '</option>';
                            });
                            $('#ItemId').html(options);
                            $('#divItens').removeClass('d-none');
                            $('#divMotivos').removeClass('d-none');
                            $('#divObs').removeClass('d-none');
                        }
                    });
                }
            });

        });

        $(document).ready(function () {
            $('#MotivoId').change(function () {
                $('#divSubmit').removeClass('d-none');
            });
        });

    </script>
    <script>
        $(function () {
            $(document).on('click', '[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox({
                    alwaysShowClose: true
                });
            });
        });
    </script>
