@model NGT.Models.Entities.Ocorrencia
@{
    Layout = null;
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title txtBlack" id="EditaOcorrencia">Edição de Motivo</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="overflow-hidden">

            @using (Html.BeginForm("TrocarStatus", "Ocorrencia", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="modal-footer col-11 col-md-12 m-0 pb-0 justify-content-between">
                    <div>
                        <label class="control-label text-muted">ID de registro:</label>
                        <input disabled name="Id" value="@ViewBag.ocorencia.Id" />
                    </div>
                </div>

                <div class="form-group m-0">
                    @Html.LabelFor(model => model.StatusTicketId, "Status: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                    <div class="col-md-12 pl-3 pr-3">
                        @Html.DropDownList("StatusTicketId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                    </div>
                </div>

                @*<div class="form-group">
                    <select class="form-control tktId" id="StatusTicketId" name="StatusTicketId">
                        <option value="@item.StatusTicketId">@item.StatusTicket.Nome</option>
                        @foreach (var status in @ViewBag.StatusTicketsId)
                        {
                            if (status.Nome != item.StatusTicket.Nome)
                            {
                                <option value="@status.Id">@status.Nome</option>
                            }
                        }
                    </select>
                </div>*@

                <div class="modal-footer col-11 col-md-12">
                    <button type="submit" class="btn btn-default float-right">
                        <i class="fas fa-solid fa-floppy-disk"></i>
                        Salvar
                    </button>
                </div>

            }

        </div>
    </div>
</div>

