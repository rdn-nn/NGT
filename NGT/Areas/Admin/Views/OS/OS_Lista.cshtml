                    </select>

                </div>

                <div class="form-group">
                    <label>Descr.Problema</label>
                    <select class="form-control select2" style="width: 100%;">
                        <option selected="selected">BD</option>
                        <option>BD</option>
                        <option>BD</option>

                    </select>
                </div>

                <div class="form-group">
                    <label>Observação</label>
