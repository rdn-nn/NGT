        @section CssPage{
            <link href="~/Areas/Admin/Content/Libs/select2/css/select2.min.css" rel="stylesheet" />
            <link href="~/Areas/Admin/Content/Libs/daterangepicker/daterangepicker.css" rel="stylesheet" />
            <link href="~/Areas/Admin/Content/Libs/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
        }


        @section ScriptPage{

            <script src="~/Areas/Admin/Content/Libs/daterangepicker/daterangepicker.js"></script>
            <script src="~/Areas/Admin/Content/Libs/select2/js/select2.full.min.js"></script>
            <script src="~/Areas/Admin/Content/Libs/moment/moment.min.js"></script>
            <script src="~/Areas/Admin/Content/Libs/inputmask/jquery.inputmask.min.js"></script>
            <script src="~/Areas/Admin/Content/Libs/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
            <script>
                $(function () {
                    //Initialize Select2 Elements
                    $('.select2').select2()

                    //Date picker
                    $('#reservationdate').datetimepicker({
                        format: 'DD/MM/yyyy'
                    });

                })

            </script>

            <script>
                $(document).ready(function () {
                    $('#OcorrenciaId').change(function () {

                        var select = document.getElementById("OcorrenciaId");
                        var items = [];
                        for (let i = 0; i < select.options.length; i++) {
                            if (select.options[i].selected) {
                                items.push(select.options[i].value);
                            }
                        }
                        data = { OcoId: items };
                        console.log(data);

                        $.ajax({
                            url: '/admin/os/carregapatrimonio',
                            type: 'POST',
                            //cache: false,
                            data: data,
                            datatype: 'json',
                            success: function (data) {
                                var options = '';
                                //options += '<option value>Selecione o Local</option>';
                                $.each(data, function () {
                                    options += '<option value="' + this.id + '" selected >' + this.patrimonio + '</option>';
                                });
                                $('#Patrim').html(options);
                                //        $('#divLocais').removeClass('d-none');
                                //        $('#divCategs').removeClass('d-none');
                            },
                        });
                    });
                });
            </script>
        }
