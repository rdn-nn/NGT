                        @Html.DropDownList("Patrim", Enumerable.Empty<SelectListItem>(), htmlAttributes: new { @class = "form-control col-11 col-md-12 select2", multiple = "multiple", style = "width: 100%;" })
                    </div>
                </div>


                <div class="form-group">
