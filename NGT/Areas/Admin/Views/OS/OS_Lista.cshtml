@model NGT.Models.Entities.OrdServico
@{
    ViewBag.Title = "Ordens de Serviço";
    ViewBag.MenuLinkOS = true;
}

<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>
<section class="pl-3 pr-3">
    <div class="row">
        <div class="col-sm-6 mb-3">



        </div>
        <div class="col-sm-6 mb-3">

            <a class="btn btn-primary btn-sm float-lg-right float-md-right float-sm-right float-left" id="novaOS">
                Nova OS
            </a>
        </div>
    </div>
</section>
<div class="pl-3 pr-3 pb-3">

    <div class="row">
        <div id="idPendente" class="col-lg-3 col-6">
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Pendente</h3>
                    <p>Pendentes</p>
                </div>
                <div class="icon text-info">
                    <i class="fas fa-solid fa-circle-pause"></i>
                </div>
            </div>
        </div>

        <div id="idAndamento" class="col-lg-3 col-6">
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Andamento</h3>
                    <p>Andamento</p>
                </div>
                <div class="icon text-warning">
                    <i class="fas fa-solid fa-arrow-rotate-right"></i>
                </div>
            </div>
        </div>

        <div id="idConcluido" class="col-lg-3 col-6">
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Concluido</h3>
                    <p>Concluídos</p>
                </div>
                <div class="icon text-success">
                    <i class="fas fa-solid fa-circle-check"></i>
                </div>
            </div>
        </div>

        <div id="idCancelado" class="col-lg-3 col-6">
            <div class="small-box bg-cardsAdmin">
                <div class="inner">
                    <h3>@ViewBag.Cancelado</h3>
                    <p>Cancelados</p>
                </div>
                <div class="icon text-danger">
                    <i class="fas fa-times-circle"></i>
                </div>
            </div>
        </div>
    </div>
    <div>
        @if (ViewBag.Ordens.Count >= 1)
        {
            <div>
                <table id="ordensTable" class="table table-bordered table-striped table-hover table-sm">
                    <thead class="theadbg">
                        <tr>
                            <th>Ticket</th>
                            <th>Tipo de Manutenção</th>
                            <th>Desc. Problema</th>
                            <th>Observações</th>
                            <th>Fornecedor</th>
                            <th>Itens</th>
                            <th>Valor Total</th>
                            <th>Nota Fiscal</th>
                            <th>C. Custo</th>
                            <th>Entrega Prev.</th>
                            <th>Entrega Real</th>
                            <th>Criado em</th>
                            <th>Criado por</th>
                            <th>Atualização</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="tbodybg">
                        @foreach (var item in @ViewBag.Ordens)
                        {
                            <tr>
                                <th>@item.NumTicketOS</th>
                                <td>@item.ManutencaoTipo.Nome</td>
                                <td>@item.DescProblema</td>
                                <td>
                                    @if (item.Obs != null)
                                    {
                                        <div id="smallScroll" class="smallOS small">
                                            @Html.Raw(item.Obs.Replace("|", "<br/>"))
                                        </div>
                                    }
                                </td>
                                <td>@item.Fornecedor.NomeFantasia</td>
                                <td>
                                    @foreach (var i in ViewBag.Itens)
                                    {
                                        if (i.OrdServicoId == item.Id)
                                        {
                                            @i.ItemDesc.ItemDescInfo <br />
                                        }
                                    }
                                </td>
                                <td>R$ @Math.Round(@item.Valor, 2)</td>
                                <td>@item.NotaF</td>
                                <td>@item.CentroCusto</td>
                                <td>@item.DataEntregaPrevis.ToShortDateString()</td>
                                <td>
                                    @if (item.DataEntregaReal != null)
                                    {
                                        @item.DataEntregaReal.ToShortDateString();
                                    }
                                    else
                                    {
                                        @item.DataEntregaReal;
                                    }
                                </td>

                                <td>@item.DataCriacao.ToShortDateString()</td>
                                <td>@item.Usuario.Nome</td>
                                <td>
                                    @if (item.DataAtualizacao != null)
                                    {
                                        @item.DataAtualizacao.ToShortDateString();
                                    }
                                    else
                                    {
                                        @item.DataAtualizacao;
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-between">
                                        <div class="statusOco flex-grow-1">@item.StatusTicket.Nome</div>
                                        <div class="float-left editaOS" rel="@item.Id"><i class="fas fa-pencil-alt"></i></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditaOS" aria-hidden="true"></div>
<div id="modalN" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovaOS" aria-hidden="true"></div>

@section CssPage{
    <link href="~/Areas/Admin/Content/Libs/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/datatables-buttons/css/buttons.bootstrap4.css" rel="stylesheet" />

    <link href="~/Areas/Admin/Content/Libs/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
}


@section ScriptPage{
    <script src="~/Areas/Admin/Content/Libs/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/pdfmake/pdfmake.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/pdfmake/vfs_fonts.js"></script>
    <script src="~/Areas/Admin/Content/Libs/jszip/jszip.min.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/buttons.html5.js"></script>
    @*<script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/buttons.flash.min.js"></script>*@
    <script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/Areas/Admin/Content/Libs/datatables-buttons/js/buttons.colVis.js"></script>
    <script src="~/Areas/Admin/Content/Libs/jquery/jquery.slimscroll.min.js"></script>

    <script>
        $(function () {
            $("#ordensTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#ordensTable_wrapper .col-md-6:eq(0)');
        });
    </script>
    <script>
        $('#idAndamento').click(function () {
            $("#tabSearch").val("Andamento").trigger('keyup');
        });

        $('#idPendente').click(function () {
            $("#tabSearch").val("Pendente").trigger('keyup');
        });

        $('#idConcluido').click(function () {
            $("#tabSearch").val("Concluído").trigger('keyup');
        });

        $('#idCancelado').click(function () {
            $("#tabSearch").val("Cancelado").trigger('keyup');
        });
    </script>
    <script>
        $(function () {
            $('.editaOS').click(function () {
                var id = $(this).attr("rel");
                $("#modal").load("/admin/os/editaos/" + id, function () {
                    $("#modal").modal();
                });
            });
        });
    </script>
    <script>
        $(function () {
            $('#novaOS').click(function () {
                /*var id = $(this).attr("rel");*/
                $("#modalN").load("/admin/nova-os", function () {
                    $("#modalN").modal();
                });
            });
        });
    </script>
    <script type="text/javascript">
        $(function () {
            $('div.smallOS').slimscroll({
                height: 'fit-content',
                color: '#007bff',
                railVisible: true,
                railBorderRadius: 5
            }).parent().css({
                border: 'none'
            });
        });
    </script>
}
