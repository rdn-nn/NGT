@model NGT.Models.Entities.ItemDesc
@{
    Layout = null;
}
<span>Teste de incluaos</span>

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title txtBlack" id="EditaItemDesc">Edição de Descrição de Itens</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="overflow-hidden">

            @using (Html.BeginForm("Edita", "ItemDesc", FormMethod.Post))
            {

                bool statusPlaca;
                bool statusPatInterno;

                statusPlaca = ViewBag.ItemDesc.HasPlaca;

                statusPatInterno = ViewBag.ItemDesc.IsPatInterno;


                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="modal-footer col-11 col-md-12 m-0 pb-0 justify-content-between">
                    <div>
                        <label class="control-label text-muted">ID de registro:</label>
                        @ViewBag.ItemDesc.Id
                    </div>

                    <a ref="remove_@ViewBag.ItemDesc.Id" class="btn btn-danger btn-sm remItemDesc">
                        <i class="fas fa-trash"></i>
                        Excluir
                    </a>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ItemId, "Nome: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("ItemId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumSerie, "Nº Série: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                <input type="text" name="NumSerie" class="form-control col-11 col-md-12" value="@ViewBag.ItemDesc.NumSerie">
                                @*@Html.EditorFor(model => model.NumSerie, new { htmlAttributes = new { @class = "form-control col-11 col-md-12" } })*@
                                @Html.ValidationMessageFor(model => model.NumSerie, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Patrimonio, "Nº Patrimônio: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                <input type="text" name="Patrimonio" class="form-control col-11 col-md-12" value="@ViewBag.ItemDesc.Patrimonio">
                                @*@Html.EditorFor(model => model.Patrimonio, new { htmlAttributes = new { @class = "form-control col-11 col-md-12" } })*@
                                @Html.ValidationMessageFor(model => model.Patrimonio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LocalId, "Local: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("LocalId", null, "Selecione o Local", htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CategoriaId, "Categoria: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("CategoriaId", null, "Selecione a Categoria", htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                        <div class="form-check">
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.CheckBox("HasPlaca", statusPlaca, htmlAttributes: new { @class = "form-check-input", @name = "HasPlaca" })
                                @Html.LabelFor(model => model.HasPlaca, "Possui placa? ", htmlAttributes: new { @class = "form-check-label" })
                            </div>
                        </div>

                        <div class="form-check">
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.CheckBox("IsPatInterno", statusPatInterno, htmlAttributes: new { @class = "form-check-input", @name = "IsPatInterno" })
                                @Html.LabelFor(model => model.IsPatInterno, "É patrimônio interno? ", htmlAttributes: new { @class = "form-check-label" })
                            </div>
                        </div>

                        <div class="form-group m-0">
                            @Html.LabelFor(model => model.StatusId, "Status: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer justify-content-end col-11 col-md-12">
                    <button type="submit" class="btn btn-default ">Gravar</button>
                </div>

            }
        </div>
    </div>
</div>

<script>
    $(".remItemDesc").click(function () {
        var id = $(this).attr("ref");
        Swal.fire({
            title: 'Deseja confirmar a exclusão deste Item?',
            text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Cancelar',
            confirmButtonText: 'Sim, excluir!'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    dataType: "json",
                    type: "POST",
                    url: "/admin/itensdesc/exclui-item",
                    data: { id },
                    success: function (retorno) {

                        if (retorno == "t") {

                            window.location.replace("/admin/itens");

                        }
                        else if (retorno == "f") {

                            window.location.replace("/admin/itens");
                        }
                    }
                });
            }
        })
    });
</script>
