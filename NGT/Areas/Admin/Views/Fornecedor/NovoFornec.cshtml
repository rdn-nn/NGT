                        <div class="col-md-12 pl-3 pr-3">
                            @Html.EditorFor(model => model.CargoResp, new { htmlAttributes = new { @class = "form-control col-11 col-md-12" } })
                            @Html.ValidationMessageFor(model => model.CargoResp, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Obs, "Informações Adicionais: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                        <div class="col-md-12 pl-3 pr-3">
                            @Html.TextAreaFor(model => model.Obs, new { @class = "form-control col-11 col-md-12", rows = "5" })
                        </div>
                    </div>
                </div>

            </div>
                
                

                <div class="modal-footer justify-content-end col-11 col-md-12">
                    <button type="submit" class="btn btn-default ">Gravar</button>
                </div>

            }
        </div>
    </div>
</div>


