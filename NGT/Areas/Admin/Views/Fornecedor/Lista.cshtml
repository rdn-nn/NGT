@model NGT.Models.Entities.Fornecedor
@{
    ViewBag.Title = "Fornecedores";
    ViewBag.MenuLinkFornecedores = true;
}

<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>

<section class="pl-3 pr-3">
    <div class="row">
        <div class="col-sm-6 mb-3">

            <form action="@Url.RouteUrl("Admin.Fornecedor.Filtrar")" method="get" role="search" class="d-inline">
                <div class="input-group input-group-sm">
                    <input class="form-control" type="text" name="termo" placeholder="Buscar Fornecedor">
                    <div class="input-group-append">
                        <button class="btn input-group-text" type="submit">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-sm-6 mb-3">
            <a class="btn btn-primary btn-sm float-lg-right float-md-right float-sm-right float-left" id="novoFornec">
                Novo Fornecedor
            </a>
        </div>
    </div>
</section>

<div class="pl-3 pr-3 pb-3">
    <div class="row d-flex justify-content-center">

        @foreach (var item in ViewBag.fornecedores)

        {

            bool status;
            if (item.Status.Nome == "Ativado")
            {
                status = true;
            }
            else
            {
                status = false;
            }
            <div class="col-md-4 col-sm-6 col-lg-4 col-xl-4 col-12 mb-3">

                <div class="card card-info card-outline card-fornec">

                    <div class="removeForn">
                        <button ref="@item.Id" class="btn btn-tool removeFornec">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <div class="pl-4 pr-4">
                        <h3 class="profile-username text-center mb-0 pt-2">@item.NomeFantasia</h3>
                    </div>


                    <div class="d-flex justify-content-center align-items-center flex-nowrap">

                        <div class="">
                            <span id="imgForn" class="far fa-solid fa-industry"></span>
                        </div>
                        <div class="pr-2 flex-grow-1">

                            <h3 class="profile-username fornec">Contato: @item.NomeResp</h3>
                            <h3 class="profile-username fornec">Função: @item.CargoResp</h3>
                            <h3 class="profile-username tel text-muted">
                                Tel.: @item.Telefone
                                / Email: @item.Email
                            </h3>
                        </div>
                    </div>
                    <div class="pl-4 pr-4">
                        <ul class="list-group list-group-unbordered mb-5">
                            <li class="list-group-item fornec">
                                <b>Ramo Ativ.: </b> <a class="float-right">@item.RamoAtiv</a>
                            </li>
                            <li class="list-group-item fornec">
                                <b>
                                    @Html.CheckBox("chk", status, new { @class = "status", @rel = @item.Id })
                                    Status:
                                </b>
                                <a class="float-right" id="status_@item.Id">
                                    @item.Status.Nome
                                </a>
                            </li>
                        </ul>

                        <div class="text-right opt forn pb-2">

                            <button rel="@item.Id" class="btn btn-info btn-sm EditFornec">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Editar
                            </button>

                            <button rel="@item.Id" class="btn btn-primary btn-sm ShowFornec">
                                <i class="fas fa-folder"></i>
                                Ver Mais
                            </button>

                        </div>
                    </div>



                    </div>


                </div>
        }
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovoFornec" aria-hidden="true"></div>
<div id="modalE" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditFornec" aria-hidden="true"></div>
<div id="modalS" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ShowFornec" aria-hidden="true"></div>

@section ScriptPage {
    <script src="~/Areas/Admin/Content/Libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
            $(function () {
                $('#novoFornec').click(function () {
                    $("#modal").load("@Url.RouteUrl("Admin.Fornecedor.NovoFornecedor")", function () {
                        $("#modal").modal();
                    });
                });
            });
    </script>
    <script>
        $(function () {
            $('.EditFornec').click(function () {
                var id = $(this).attr("rel");
                $("#modalE").load("/admin/fornecedores/editafornecedor/" + id, function () {
                    $("#modalE").modal();
                });
            });
        });
    </script>
    <script>
        $(function () {
            $('.ShowFornec').click(function () {
                var id = $(this).attr("rel");
                $("#modalS").load("/admin/fornecedores/exibefornecedor/" + id, function () {
                    $("#modalS").modal();
                });
            });
        });
    </script>
    <script>
        $(".status").click(function () {
            var id = $(this).attr("rel");
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/admin/fornecedores/trocarstatus",
                data: { id },
                success: function (retorno) {

                    if (retorno == "t") {
                        $("#status_" + id).removeClass("font-weight-bold text-danger");
                        $("#status_" + id).addClass("font-weight-bold text-success");
                        $("#status_" + id).text("Ativado");
                    }
                    else if (retorno == "f") {
                        $("#status_" + id).removeClass("font-weight-bold text-success");
                        $("#status_" + id).addClass("font-weight-bold text-danger");
                        $("#status_" + id).text("Desativado");

                    } else if (retorno == "n") {
                        window.location.replace("/admin/fornecedores");
                    }
                }
            });
        });</script>
    <script>
        $(".removeFornec").click(function () {
            var id = $(this).attr("ref");

            Swal.fire({
                title: 'Deseja confirmar a exclusão deste Fornecedor?',
                text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        dataType: "json",
                        type: "POST",
                        url: "/admin/fornecedores/deletafornecedor",
                        data: { id },
                        success: function (retorno) {

                            if (retorno == "t") {

                                window.location.replace("/admin/fornecedores");

                            }
                            else if (retorno == "f") {

                                window.location.replace("/admin/fornecedores");
                            }
                        }
                    });
                }
            })

        });</script>
}
