@model NGT.Models.Entities.Item
@{
    Layout = null;

    bool statusHasPlaca = ViewBag.Itens.HasPlaca;
    bool statusIsPatInterno = ViewBag.Itens.IsPatInterno;

}

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title txtBlack" id="EditaItem">Edição de Item</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="overflow-hidden">

            @using (Html.BeginForm("EditaItem", "Item", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="modal-footer col-11 col-md-12 m-0 pb-0 justify-content-between">
                    <div>
                        <label class="control-label text-muted">ID de registro:</label>
                        @ViewBag.Itens.Id
                    </div>

                    <a ref="remove_@ViewBag.Itens.Id" class="btn btn-danger btn-sm remItem">
                        <i class="fas fa-trash"></i>
                        Excluir
                    </a>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, "Nome: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                <input type="text" name="Nome" class="form-control col-11 col-md-12" value="@ViewBag.Itens.Nome">
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NumSerie, "Nº Série: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                <input type="text" name="NumSerie" class="form-control col-11 col-md-12" value="@ViewBag.Itens.NumSerie">
                                @Html.ValidationMessageFor(model => model.NumSerie, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Patrimonio, "Nº Patrimônio: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                <input type="text" name="NumSerie" class="form-control col-11 col-md-12" value="@ViewBag.Itens.Patrimonio">
                                @Html.ValidationMessageFor(model => model.Patrimonio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="col-6">

                        <div class="form-group m-0">
                            @Html.LabelFor(model => model.LocalId, "Local: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("LocalId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                        <div class="form-group m-0">
                            @Html.LabelFor(model => model.CategoriaId, "Categoria: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                        <div class="form-check">
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.CheckBox("HasPlaca", statusHasPlaca, new { @class = "form-check-input" })
                                @Html.LabelFor(model => model.HasPlaca, "Possui placa? ", htmlAttributes: new { @class = "form-check-label" })
                            </div>
                        </div>

                        <div class="form-check">
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.CheckBox("IsPatInterno", statusIsPatInterno, new { @class = "form-check-input" })
                                @Html.LabelFor(model => model.IsPatInterno, "É patrimônio interno? ", htmlAttributes: new { @class = "form-check-label" })
                            </div>
                        </div>

                        <div class="form-group m-0">
                            @Html.LabelFor(model => model.StatusId, "Status: ", htmlAttributes: new { @class = "control-label pl-3 pt-3" })
                            <div class="col-md-12 pl-3 pr-3">
                                @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control col-11 col-md-12" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer col-11 col-md-12">
                    <button type="submit" class="btn btn-default float-right">
                        <i class="fas fa-solid fa-floppy-disk"></i>
                        Salvar
                    </button>
                </div>

            }

        </div>
                </div>
            </div>

<script>
    $(".remItem").click(function () {
        var id = $(this).attr("ref");
        Swal.fire({
            title: 'Deseja confirmar a exclusão deste Item?',
            text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Cancelar',
            confirmButtonText: 'Sim, excluir!'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    dataType: "json",
                    type: "POST",
                    url: "/admin/itens/remove-item",
                    data: { id },
                    success: function (retorno) {

                        if (retorno == "t") {

                            window.location.replace("/admin/itens");

                        }
                        else if (retorno == "f") {

                            window.location.replace("/admin/itens");
                        }
                    }
                });
            }
        })
    });
</script>
@section ScriptPage {

}