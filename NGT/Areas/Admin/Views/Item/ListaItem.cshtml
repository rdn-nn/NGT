<div id="modalItD" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovoItemDesc" aria-hidden="true"></div>
<div id="modalItDEdit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditaItemDesc" aria-hidden="true"></div>

@section CssPage{
    <link href="~/Areas/Admin/Content/Libs/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Libs/datatables-buttons/css/buttons.bootstrap4.css" rel="stylesheet" />
}



@section ScriptPage {

    <script>
        $(function () {
            $('.ItemDesc').click(function () {
                var id = $(this).attr("rel");
                $("#modalItD").load("/admin/itensdesc/novo-item/" + id, function () {
                    $("#modalItD").modal();
                });
            });
        });
    </script>
    <script>
        $(function () {
            $('.editaItd').click(function () {
                var id = $(this).attr("rel");
                $("#modalItDEdit").load("/admin/itensdesc/edita-item/" + id, function () {
                    $("#modalItDEdit").modal();
                });
            });
        });
    </script>
    <script>
        $(".excluiItd").click(function () {
            var id = $(this).attr("rel");
            Swal.fire({
                title: 'Deseja confirmar a exclusão deste Item?',
                text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        dataType: "json",
                        type: "POST",
                        url: "/admin/itensdesc/exclui-item",
                        data: { id },
                        success: function (retorno) {

                            if (retorno == "t") {

                                window.location.replace("/admin/itens");

                            }
                            else if (retorno == "f") {

                                window.location.replace("/admin/itens");
                            }
                        }
                    });
                }
            })
        });
    </script>



    <script>
        $(function () {
            $('#novoItem').click(function () {
                $("#modal").load("@Url.RouteUrl("Admin.Item.Novo")", function () {
                    $("#modal").modal();
                });
            });
        });
    </script>
    <script>
        $(function () {
            $('.editaItem').click(function () {
                var id = $(this).attr("ref");
                $("#modalE").load("/admin/itens/editaitens/" + id, function () {
                    $("#modalE").modal();
                });
            });
        });
    </script>
    <script>
        $(".status").click(function () {
            var id = $(this).attr("rel");
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/admin/itens/trocarstatus",
                data: { id },
                success: function (retorno) {

                    if (retorno == "t") {
                        $("#status_" + id).removeClass("text-danger");
                        $("#status_" + id).addClass("text-success");
                        $("#status_" + id).text("Ativado");
                    }
                    else if (retorno == "f") {
                        $("#status_" + id).removeClass("text-success");
                        $("#status_" + id).addClass("text-danger");
                        $("#status_" + id).text("Desativado");

                    } else if (retorno == "n") {
                        window.location.replace("/admin/itens");
                    }
                }
            });
        });</script>
    <script>
        $(".removeItem").click(function () {
            var id = $(this).attr("ref");
            Swal.fire({
                title: 'Deseja confirmar a exclusão deste Item?',
                text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        dataType: "json",
                        type: "POST",
                        url: "/admin/itens/remove-item",
                        data: { id },
                        success: function (retorno) {

                            if (retorno == "t") {

                                window.location.replace("/admin/itens");

                            }
                            else if (retorno == "f") {

                                window.location.replace("/admin/itens");
                            }
                        }
                    });
                }
            })
        });
    </script>



