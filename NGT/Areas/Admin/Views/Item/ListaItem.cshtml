@model NGT.Models.Entities.Item
@{
    ViewBag.Title = "Itens";
    ViewBag.MenuLinkItem = true;
}

<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>

<section class="pl-3 pr-3">
    <div class="row">
        <div class="col-sm-6 mb-3">

            <form action="@Url.RouteUrl("Admin.Item.Filtrar")" method="get" role="search" class="d-inline">
                <div class="input-group input-group-sm">
                    <input class="form-control" type="text" name="termo" placeholder="Digite o nome de um item">
                    <div class="input-group-append">
                        <button class="btn input-group-text" type="submit">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-sm-6 mb-3">
            @if (@TempData["LP"] != null)
            {
                <a href="/admin/itens" class="btn btn-default btn-sm float-lg-left float-md-left float-sm-left float-left mr-3">
                    Limpar
                </a>
            }

            <a class="btn btn-primary btn-sm float-lg-right float-md-right float-sm-right float-left" id="novoItem">
                Novo Item
            </a>
        </div>
    </div>
</section>

<div class="pl-3 pr-3 pb-3">

    <div class="row d-flex justify-content-center align-items-center">
        @foreach (var item in ViewBag.itens)
        {
            var totItens = 0;
            bool status;
            if (item.Status.Nome == "Ativado")
            {
                status = true;
            }
            else
            {
                status = false;
            }


            //foreach (var o in ViewBag.ocorrencias)
            //{
            //    if (o.Id == l.BlocoId)
            //    {
            //        foreach (var i in ViewBag.itens)
            //        {
            //            if (i.LocalId == l.Id)
            //            {
            //                totItens = totItens + 1;
            //            }
            //        }

            //    }
            //}
            foreach (var i in ViewBag.itensdesc)
            {
                if (item.Id == i.ItemId)
                {

                    totItens = totItens + 1;

                }
            }


            <div class="col-md-4 col-sm-6 col-lg-4 col-xl-2 col-6">

                <div class="card card-widget widget-user card-category">
                    <div class="widget-user-header bg-gradient-primary">

                        <div class="editLoc">
                            <button ref="@item.Id" class="btn btn-tool editaItem">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                        </div>

                        <div class="removeLoc">
                            <button ref="@item.Id" class="btn btn-tool removeItem">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <h3 class="widget-user-username">@item.Nome</h3>
                    </div>

                    <div class="card-footer">
                        <div class="row mb-5">
                            <div class="col-6 border-right">
                                <div class="description-block">
                                    <h5 class="description-header">
                                        @Html.CheckBox("chk", status, new { @class = "status", @rel = @item.Id })
                                        <span id="status_@item.Id">@item.Status.Nome</span>
                                    </h5>
                                    <span class="description-text">Status</span>
                                </div>

                            </div>

                            <div class="col-6">
                                <div class="description-block">
                                    <h5 class="description-header">
                                        @totItens
                                    </h5>
                                    <span class="description-text">Registros</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="opt">
                        <button rel="@item.Id" class="btn btn-primary ItemDesc">
                            <i class="fa-solid fa-plus"></i>
                            Criar
                        </button>
                    </div>

                </div>

            </div>
        }
    </div>
    <div>
        @if (ViewBag.itensdesc.Count >= 1)
        {

            <div>
                <table id="itensdescTable" class="table table-bordered table-striped table-hover table-sm">
                    <thead class="theadbg">
                        <tr>
                            @*<th>ID</th>*@
                            <th>Item</th>
                            <th>Num. Série</th>
                            <th>Patrimônio</th>
                            <th>Placa?</th>
                            <th>Pat. Interno?</th>
                            <th>Local</th>
                            <th>Categoria</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="tbodybg">
                        @foreach (var itd in ViewBag.itensdesc)
                        {
                            <tr>
                                @*<th>@itd.Id</th>*@
                                <td>@itd.Item.Nome</td>
                                <th>
                                    @if (itd.NumSerie == null)
                                    {
                                        <span>Sem nº registrado</span>
                                    }
                                    else
                                    {
                                        @itd.NumSerie
                                    }
                                </th>
                                <th>
                                    @if (itd.Patrimonio == null)
                                    {
                                        <span>Sem nº registrado</span>
                                    }
                                    else
                                    {
                                        @itd.Patrimonio
                                    }
                                </th>
                                <th>
                                    @if (itd.HasPlaca != false)
                                    {
                                        <span>S</span>
                                    }
                                    else
                                    {
                                        <span>N</span>
                                    }
                                </th>
                                <th>
                                    @if (itd.IsPatInterno != false)
                                    {
                                        <span>S</span>
                                    }
                                    else
                                    {
                                        <span>N</span>
                                    }
                                </th>
                                <td>@itd.Local.Nome</td>
                                <td>@itd.Categoria.Nome</td>
                                <td>@itd.Status.Nome</td>
                                <td>
                                    <div class="row justify-content-around pl-2 pr-2">
                                        <div class="editaItd" rel="@itd.Id"><i class="fas fa-pencil-alt"></i></div>
                                        <span>|</span>
                                        <div class="excluiItd" rel="@itd.Id"><i class="fa-solid fa-trash-can"></i></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovoItem" aria-hidden="true"></div>
<div id="modalE" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditaItem" aria-hidden="true"></div>
