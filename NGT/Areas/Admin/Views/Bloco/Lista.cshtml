    <div class="row d-flex justify-content-center align-items-center">
        @foreach (var item in @ViewBag.blocos)
        {
            var totItens = 0;
            bool status;
            if (item.Status.Nome == "Ativado")
            {
                status = true;
            }
            else
            {
                status = false;
            }

            foreach (var l in ViewBag.locais)
            {
                if (item.Id == l.BlocoId)
                {
                    foreach (var i in ViewBag.itens)
                    {
                        if (i.LocalId == l.Id)
                        {
                            totItens = totItens + 1;
                        }
                    }

                }
            }


            <div class="col-md-4 col-sm-12 col-lg-4 col-xl-2">

                <div class="card card-widget widget-user card-bloco">
                    <div class="widget-user-header bg-gradient-info">

                        <div class="editBloc">
                            <button ref="@item.Id" class="btn btn-tool editBloco">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                        </div>

                        <div class="removeBloc">
                            <button ref="@item.Id" class="btn btn-tool removeBloco">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <h3 class="widget-user-username">@item.Nome</h3>
                        <h5 class="widget-user-desc">Fatec Guaratinguetá</h5>
                    </div>
                    <div class="widget-user-image">
                        <span id="imgBloco" class="far fa-building"></span>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 border-right">
                                <div class="description-block">
                                    <h5 class="description-header">
                                        @Html.CheckBox("chk", status, new { @class = "status", @rel = @item.Id })
                                        <span id="status_@item.Id">@item.Status.Nome</span>
                                    </h5>
                                    <span class="description-text">Status</span>
                                </div>

                            </div>

                            <div class="col-6">
                                <div class="description-block">
                                    <h5 class="description-header">
                                        @totItens
                                    </h5>
                                    <span class="description-text">Itens</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        }
    </div>
</div>

<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="NovoBloco" aria-hidden="true"></div>
<div id="modalE" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EditaBloco" aria-hidden="true"></div>

@section ScriptPage {
    <script src="~/Areas/Admin/Content/Libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            $('#novoBloco').click(function () {
                $("#modal").load("@Url.RouteUrl("Admin.Bloco")", function () {
                    $("#modal").modal();
                });
            });
        });
    </script>
    <script>
        $(function () {
            $('.editBloco').click(function () {
                var id = $(this).attr("ref");
                $("#modalE").load("/admin/blocos/editablocos/" + id, function () {
                    $("#modalE").modal();
                });
            });
        });
    </script>
    <script>
        $(".status").click(function () {
            var id = $(this).attr("rel");
            $.ajax({
                dataType: "json",
                type: "POST",
                url: "/admin/blocos/trocarstatus",
                data: { id },
                success: function (retorno) {

                    if (retorno == "t") {
                        $("#status_" + id).removeClass();
                        $("#status_" + id).addClass("font-weight-bold text-success");
                        $("#status_" + id).text("Ativado");
                    }
                    else if (retorno == "f") {
                        $("#status_" + id).removeClass();
                        $("#status_" + id).addClass("font-weight-bold text-danger");
                        $("#status_" + id).text("Desativado");
                    }
                }
            });
        });
    </script>
    <script>
        $(".removeBloco").click(function () {
            var id = $(this).attr("ref");
            Swal.fire({
                title: 'Deseja confirmar a exclusão deste bloco?',
                text: "Todos os dados serão apagados. Esta ação não pode ser desfeita!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: 'Cancelar',
                confirmButtonText: 'Sim, excluir!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        dataType: "json",
                        type: "POST",
                        url: "/admin/blocos/remove-bloco",
                        data: { id },
                        success: function (retorno) {

                            if (retorno == "t") {

                                window.location.replace("/admin/blocos");

                            }
                            else if (retorno == "f") {

                                window.location.replace("/admin/blocos");
                            }
                        }
                    });
                }
            })


        });

    </script>

}