@model NGT.Models.Entities.Bloco
@{
    ViewBag.Title = "Blocos";
    ViewBag.MenuLinkBlocos = true;
}

<section class="content-header pt-2">
    <div class="row">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("Admin.Dashboard.Index")">Admin</a></li>
                <li class="breadcrumb-item active">@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>

<section class="pl-3 pr-3">
    <div class="row">
        <div class="col-sm-6 mb-3">

            <form action="@Url.RouteUrl("Admin.Bloco.Filtrar")" method="get" role="search" class="d-inline">
                <div class="input-group input-group-sm">
                    <input class="form-control" type="text" name="termo" placeholder="Digite o nome de um bloco">
                    <div class="input-group-append">
                        <button class="btn input-group-text" type="submit">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
        <div class="col-sm-6 mb-3">
            @if (@TempData["LP"] != null)
            {
                <a href="/admin/blocos" class="btn btn-default btn-sm float-lg-left float-md-left float-sm-left float-left mr-3">
                    Limpar
                </a>
            }
            <a class="btn btn-primary btn-sm float-lg-right float-md-right float-sm-right float-left" id="novoBloco">
                Novo Bloco
            </a>
        </div>
    </div>
</section>

